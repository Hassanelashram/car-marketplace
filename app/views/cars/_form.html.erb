<div class="container">
  <div class="row">
    <div class="col-6">
      <%= simple_form_for(@car) do |f| %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.input :name %>
        <%= f.input :brand %>
        <%= f.input :transmission, collection: ['Automatic', 'Manual'] %>
        <%= f.input :seats, collection: 2..4 %>
        <%= f.input :trunk %>
        <%= f.input :address %>
        <%= f.association :city, { prompt: "Pick a city"} %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
