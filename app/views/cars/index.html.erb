<div class="container">
  <div class="row">
  <% @cars.each do |c| %>
    <div class="col-sm-12 col-md-6 col-lg-4 mx-auto">
      <div class="card-car">
       <div style="background-image: url('https://images.unsplash.com/photo-1542362567-b07e54358753?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80');" class="card-top">
        </div>
        <div class="card-bottom">
        <h5 class="card-title"><%= c.name %> <strong>·</strong> <%= c.city.name %></h5>
        <p class="card-details">Transmission:<%= c.transmission %> <strong>·</strong> Seats: <%= c.seats %> <strong>·</strong> Trunk:<%= c.trunk %></p>
        </div>
     </div>
    </div>
  <% end %>
</div>
</div>


